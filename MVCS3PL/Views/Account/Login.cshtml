@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Auth.cshtml";
}



<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>

			<input type="submit" value="SIGNIN">
		</form>
		<p>Do not have an Account ? <a asp-action="Register"> Register Now!</a></p>
		<p> <a asp-action="ForgetPassword">Forget Password </a></p>
	</div>
</div>

