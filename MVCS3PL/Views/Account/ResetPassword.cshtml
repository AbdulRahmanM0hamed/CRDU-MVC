@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Auth.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ResetPassword" method="post">
			<div asp-validation-summary="All"></div>

			<input class="text email" type="password" asp-for="NewPassword" placeholder="New Password" required="">
			<input class="text email" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
		


		<input type="submit" value="Login" >
		</form>
	</div>
</div>