@model IEnumerable<EmployeeViewModel>
@{
	ViewData["Title"] = "All Employees";
}

<h1> Get All Employee</h1>

<a asp-controller="Employee" asp-action="Create" class="btn btn-success my-5">Add new Employee</a>
<br />

<form class="my-3" asp-action="Index" asp-controller="Employee">
	<div class="row">
		<div class="col-sm-8">
			<input placeholder="Search By Name.." name="SearchByName" class="form-control" />
		</div>
		<div class="col-sm-4">
			<input type="submit" value="Search" class="btn btn-success btn-block" />

		</div>

	</div>
</form>
@if (Model.Count() > 0)
{

	<table class="table-sm table-striped table-hover mt-3 ">
		<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(D=>D.Name)</th>
				<th>@Html.DisplayNameFor(D=>D.Age)</th>
				<th>@Html.DisplayNameFor(D=>D.Email)</th>
				<th>@Html.DisplayNameFor(D=>D.PhoneNumber)</th>
				<th>@Html.DisplayNameFor(D=>D.Image)</th>

				<th>@Html.DisplayNameFor(D=>D.Address)</th>
				<th>@Html.DisplayNameFor(D=>D.Salary)</th>
				<th>@Html.DisplayNameFor(D=>D.Department)</th>
				<th>@Html.DisplayNameFor(D=>D.CreationDate)</th>
				<th>@Html.DisplayNameFor(D=>D.HireDate)</th>
				<th>@Html.DisplayNameFor(D=>D.IsActve)</th>

				<th>Details</th>
				<th>UpDate</th>
				<th>Delete</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Model)
			{
				<tr>
					<td>@employee.Name</td>
					<td>@employee.Age</td>
					<td>@Html.DisplayFor(E=>employee.Email)</td>
					<td>@employee.PhoneNumber</td>


					<td>
						<img src="~/files/image/@employee.ImageName" alt=".." class="img-fluid rounded" height="30" width="30" />
					</td>

					<td>@employee.Address</td>
					<td>@Html.DisplayFor(E=>employee.Salary)</td>
					<td>@Html.DisplayFor(E=>employee.Department.Name)</td>
					<td>@employee.CreationDate</td>
					<td>@employee.HireDate</td>
					<td>
						@if (employee.IsActve == true)
						{
							<i class="fa-solid fa-circle " style="color:green"></i>
						}
						else
						{
							<i class="fa-solid fa-circle " style="color:red"></i>

						}
					</td>

					<partial name="_BtnPartialView" model="@employee.Id.ToString()" />

				</tr>
			}
		</tbody>

	</table>
}
else
{
	<div class="alert alert-danger mt-5">
		<h3>There is no Employee</h3>
	</div>
}



