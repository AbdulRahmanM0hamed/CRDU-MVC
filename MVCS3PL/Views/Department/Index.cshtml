@model IEnumerable<DepartmentViewModel>
@{
	ViewData["Title"] = "Index";
}



@if (TempData["Message"] is not null)
{
	<script>
		setTimeout(function () {
			var alertElement = document.getElementById('alertMessage');
			alertElement.style.display = 'none';
		}, 5000);
	</script>

	<div  id="alertMessage" class="alert alert-success ">
		@TempData["Message"];
	</div>


}


<h1>All Department</h1>
<br />
<br />
<a asp-controller="Department" asp-action="Create" class="btn btn-primary my-5">Create Department</a>
<br/>
@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover mt-3">
		<thead>	
			<tr>
				<th>@Html.DisplayNameFor(D=>D.Code)</th>
				<th>@Html.DisplayNameFor(D=>D.Name)</th>
				<th>@Html.DisplayNameFor(D=>D.CreateOfDate)</th>
				<th>Details</th>
				<th>UpDate</th>
				<th>Delete</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var department in Model)
			{
				<tr>
					<td>@department.Code</td>
					<td>@department.Name</td>
					<td>@department.CreateOfDate</td>

					<partial name="_BtnPartialView" model="@department.Id.ToString()"/>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-danger mt-5">
		<h3>There is no Departments</h3>
	</div>
}




